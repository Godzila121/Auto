<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"> <LinearLayout
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" > <EditText
    android:id="@+id/input_car_name"
    android:hint="Назва авто"
    android:textColor="#000000"
    android:textColorHint="#888888"
    android:textSize="18sp"
    android:padding="12dp"
    android:background="@drawable/rounded_edittext_background"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип авто"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_car_type"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/input_car_year"
        android:hint="Рік випуску"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:textSize="18sp"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <EditText
        android:id="@+id/input_car_country"
        android:hint="Країна виробник"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <EditText
        android:id="@+id/input_car_price"
        android:hint="Ціна (USD)"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:textSize="18sp"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <EditText
        android:id="@+id/input_engine_capacity"
        android:hint="Обʼєм двигуна (см³)"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:textSize="18sp"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/button_add_new_car"
        android:text="Додати авто"
        android:textSize="18sp"
        android:background="@drawable/button_dark_gray_background"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>