<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_car_name_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назва автомобіля"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/text_buyer_email_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Покупець: email@example.com"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/text_request_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Статус: очікується"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:id="@+id/layout_request_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end"> <Button
            android:id="@+id/button_decline_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Відхилити"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/button_accept_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Прийняти"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>